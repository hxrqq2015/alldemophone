<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="day06学习内容"
        android:textSize="25sp" />
    <Button
        android:id="@+id/day06_but01"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_01人品计算器"/>
    <Button
        android:id="@+id/day06_but02"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_02开启界面两种方式"/>
    <Button
        android:id="@+id/day06_but03"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_03其他应用"/>
    <Button
        android:id="@+id/day06_but04"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_04短信分享和短信助手"/>
    <Button
        android:id="@+id/day06_but05"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_05Activity生命周期"/>
    <Button
        android:id="@+id/day06_but06"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_06Activity生命周期练习"/>
    <Button
        android:id="@+id/day06_but07"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day06_07Activity启动模式"/>

</LinearLayout>
