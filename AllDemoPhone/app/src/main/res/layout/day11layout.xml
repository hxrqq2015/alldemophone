<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="day11学习内容"
        android:textSize="25sp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/day11_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_01fragment入门"/>
        <Button
            android:id="@+id/day11_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_02fragment与activity通讯和生命周期"/>
        <Button
            android:id="@+id/day11_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_03fragment的向下兼容"/>
        <Button
            android:id="@+id/day11_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_04补间动画和集合"/>
        <Button
            android:id="@+id/day11_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_05补间动画-xml"/>

        <Button
            android:id="@+id/day11_06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_06view动画的特点"/>
        <Button
            android:id="@+id/day11_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_07属性动画和集合"/>
        <Button
            android:id="@+id/day11_08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day11_08属性动画集合-xml"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
