<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
       android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="day10学习内容" />
    <Button
        android:id="@+id/day10_but01"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_01加载图片到内存"/>
    <Button
        android:id="@+id/day10_but02"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_02加载大图片到内存"/>
    <Button
        android:id="@+id/day10_but03"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_03图像操作"/>
    <Button
        android:id="@+id/day10_but04"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_04随手涂鸦"/>
    <Button
        android:id="@+id/day10_but05"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_05撕衣服"/>
    <Button
        android:id="@+id/day10_but06"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_06调色板"/>
    <Button
        android:id="@+id/day10_but07"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_07音乐播放器"/>
    <Button
        android:id="@+id/day10_but08"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_08音乐池soundpool"/>
    <Button
        android:id="@+id/day10_but09"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day10_09视频播放器"/>
        <Button
            android:id="@+id/day10_but10"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_10surfaceview入门"/>
        <Button
            android:id="@+id/day10_but11"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_11视频播放器-v2"/>
        <Button
            android:id="@+id/day10_but12"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_12拍照"/>
        <Button
            android:id="@+id/day10_but13"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_13视频录制"/>
        <Button
            android:id="@+id/day10_but14"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_14传感器"/>
        <Button
            android:id="@+id/day10_but15"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day10_15指南针"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
